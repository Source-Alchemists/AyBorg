<MudDialog>
    <DialogContent>
        <MudTreeView T="DirectoryItem" Items="_items" Hover="true" @bind-SelectedValue="_selectedItem">
            <ItemTemplate>
                <MudTreeViewItem Items="@context.Children" Value="@context" Text="@context.Name" Icon="@Icons.Material.Filled.Folder" />
            </ItemTemplate>
        </MudTreeView>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="@OnCancelClicked">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" Disabled="@(_selectedItem == null)" OnClick="@OnChooseClicked">Choose</MudButton>
    </DialogActions>
</MudDialog>
