@using AyBorg.Web.Shared.Models

<MudDataGrid T="AuditChangeset" Items="@Changesets" SortMode="SortMode.Multiple"
            MultiSelection="true"
            FilterMode="DataGridFilterMode.ColumnFilterRow"
            Filterable="true"
            SelectedItemsChanged="@OnSelectedItemsChanged"
            Hover="true" Elevation="0">

    <Columns>
        <SelectColumn T="AuditChangeset" />
        <Column T="AuditChangeset" Field="Timestamp" Title="Timestamp (UTC)" />
        <Column T="AuditChangeset" Field="ProjectName" Title="Project Name" />
        <Column T="AuditChangeset" Field="ProjectState" Title="Project State" />
        <Column T="AuditChangeset" Field="VersionName" Title="Version" />
        <Column T="AuditChangeset" Field="User" Title="Account" />
        <Column T="AuditChangeset" Field="Approver" Title="Approver" />
        <Column T="AuditChangeset" Field="Comment" Title="Comment" />
    </Columns>
</MudDataGrid>
