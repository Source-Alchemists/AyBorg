@using AyBorg.Web.Shared.Models

<MudDataGrid T="AuditChangeset" Items="@Changesets" SortMode="SortMode.Multiple"
            MultiSelection="true"
            FilterMode="DataGridFilterMode.ColumnFilterRow"
            Filterable="true"
            SelectedItemsChanged="@OnSelectedItemsChanged"
            Hover="true" Elevation="0">

    <Columns>
        <SelectColumn T="AuditChangeset" />
        <PropertyColumn Property="x => x!.Timestamp" Title="Timestamp (UTC)" />
        <PropertyColumn Property="x => x!.ProjectName" Title="Project Name" />
        <PropertyColumn Property="x => x!.ProjectState" Title="Project State" />
        <PropertyColumn Property="x => x!.VersionName" Title="Version" />
        <PropertyColumn Property="x => x!.User" Title="Account" />
        <PropertyColumn Property="x => x!.Approver" Title="Approver" />
        <PropertyColumn Property="x => x!.Comment" Title="Comment" />
    </Columns>
</MudDataGrid>
