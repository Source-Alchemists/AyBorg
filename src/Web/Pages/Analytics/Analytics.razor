@page "/analytics"
@using SDK.Authorization
@using AyBorg.Web.Pages.Analytics.Shared
@using AyBorg.Web.Shared.Charts
@attribute [Authorize(Roles = $"{Roles.Administrator}, {Roles.Engineer}, {Roles.Reviewer}, {Roles.Auditor}")]

<PageTitle>AyBorg - Analytics</PageTitle>

<div class="page-loading-bar">
    <MudProgressLinear Color="Color.Primary" Indeterminate="true" Class="my-0" hidden="@(!_isLoading && !_isEventLogTableLoading)"/>
</div>
<MudGrid Class="mud-full-width">
    <MudItem xs="12" sm="12" md="4">
        <MudCard Class="rounded-lg">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Level Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center" style="min-height:330px">
                <PieChart Labels="@_eventLevelSummaryLabels" Data="@_eventLevelSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard Class="rounded-lg">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Service Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center" style="min-height:330px">
                <PieChart Labels="@_eventServiceSummaryLabels" Data="@_eventServiceSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard Class="rounded-lg">
            <MudCardHeader>
                <MudText Typo="Typo.h6">Event Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center" style="min-height:330px">
                <PieChart Labels="@_eventIdSummaryLabels" Data="@_eventIdSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudCard Class="rounded-lg">
            <MudCardContent Class="pt-0">
                <EventLogTable @ref="_eventLogTable" EventEntries="@_eventRecords" />
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
