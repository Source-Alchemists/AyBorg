@page "/analytics"
@using SDK.Authorization
@using AyBorg.Web.Pages.Analytics.Shared
@using AyBorg.Web.Shared.Charts
@attribute [Authorize(Roles = $"{Roles.Administrator}, {Roles.Engineer}, {Roles.Reviewer}, {Roles.Auditor}")]

<PageTitle>AyBorg - Analytics</PageTitle>

<MudGrid Class="mud-full-width">
    <MudItem xs="12" sm="12" md="4">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Level Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center">
                <PieChart Labels="@_eventLevelSummaryLabels" Data="@_eventLevelSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Service Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center">
                <PieChart Labels="@_eventServiceSummaryLabels" Data="@_eventServiceSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12" sm="12" md="4">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Event ID Summary</MudText>
            </MudCardHeader>
            <MudCardContent Class="flex-self-center">
                <PieChart Labels="@_eventIdSummaryLabels" Data="@_eventIdSummaryData" />
            </MudCardContent>
        </MudCard>
    </MudItem>
    <MudItem xs="12">
        <MudCard>
            <MudCardHeader>
                <MudText Typo="Typo.h6">Event Log</MudText>
            </MudCardHeader>
            <MudCardContent>
                <EventLogTable EventEntries="@_eventRecords" />
            </MudCardContent>
        </MudCard>
    </MudItem>
</MudGrid>
