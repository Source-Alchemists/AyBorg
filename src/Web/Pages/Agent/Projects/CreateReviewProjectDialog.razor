<MudDialog style="min-width: 400px">
    <DialogContent>
        <MudAlert Severity="Severity.Info">
            The project will be saved as review.
        </MudAlert>
        <MudTextField Label="Version" @bind-Value="_tmpProject.VersionName" Required="true" />
        <MudTextField Label="Comment" @bind-Value="_tmpProject.Comment" Required="false" Lines="3" Counter="200" Immediate="true" Variant="Variant.Outlined" class="pt-2" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="OnCloseClicked">Close</MudButton>
        <MudButton Color="Color.Primary" OnClick="OnCreateClicked">Create</MudButton>
    </DialogActions>
</MudDialog>
