@using AyBorg.SDK.Common.Models

<MudDialog>
    <DialogContent>
        <MudNumericField Label="X" @bind-Value="@_rectangle.X" />
        <MudNumericField Label="Y" @bind-Value="@_rectangle.Y" />
        <MudNumericField Label="Width" @bind-Value="@_rectangle.Width" />
        <MudNumericField Label="Height" @bind-Value="@_rectangle.Height" />
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="OnCancelClicked">Cancel</MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="OnApplyClicked">Apply</MudButton>
    </DialogActions>
</MudDialog>
