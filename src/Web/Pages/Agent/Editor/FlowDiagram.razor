@using Blazor.Diagrams.Components

<MudCard class="mud-height-full mud-width-full">
	<MudCardHeader>
		<CardHeaderAvatar>
			<MudIcon Icon="@Icons.Filled.Hub" />
		</CardHeaderAvatar>
		<CardHeaderContent>
			<MudText Typo="Typo.h6">Automation</MudText>
		</CardHeaderContent>
		<CardHeaderActions>
			<MudButtonGroup Variant="Variant.Text" Color="Color.Primary">
				<MudTooltip Text="Zoom in">
					<MudIconButton Icon="@Icons.Filled.ZoomIn" OnClick="@OnZoomInClicked" />
				</MudTooltip>
				<MudTooltip Text="Zoom reset">
					<MudIconButton Icon="@Icons.Filled.ZoomOutMap" OnClick="@OnZoomResetClicked" />
				</MudTooltip>
				<MudTooltip Text="Zoom out">
					<MudIconButton Icon="@Icons.Filled.ZoomOut" OnClick="@OnZoomOutClicked" />
				</MudTooltip>
			</MudButtonGroup>
		</CardHeaderActions>
	</MudCardHeader>
	<MudCardContent Style="height: calc(100% - 60px)" class="pt-0 mt-0">
		<div Class="diagram-container" dropzone="none" ondragover="event.preventDefault();" @ondragenter="OnDragEnter"
			@ondrop="OnDrop">
			<CascadingValue Value="_diagram">
				<DiagramCanvas Class="grid">
				</DiagramCanvas>
			</CascadingValue>
		</div>
	</MudCardContent>
</MudCard>