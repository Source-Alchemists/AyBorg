<MudDialog>
    <DialogContent>
        <MudSlider Min="1" Max="1000" @bind-Value="_iterations">
            Iterations: @_iterations
        </MudSlider>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Default" OnClick="CancelClicked">
            Cancel
        </MudButton>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="StartClicked">
            Start
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; init; } = null!;
    private int _iterations = 10;

    private void CancelClicked()
    {
        MudDialog.Cancel();
    }

    private void StartClicked()
    {
        MudDialog.Close(DialogResult.Ok(new TrainParameters(
            Iterations: _iterations
        )));
    }

    public sealed record TrainParameters(int Iterations);
}
