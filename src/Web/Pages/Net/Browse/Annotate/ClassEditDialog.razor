<MudDialog>
    <DialogContent>
        <MudColorPicker 
            @bind-Text="ColorValue"
            PickerVariant="PickerVariant.Static" 
            ColorPickerMode="ColorPickerMode.HEX"
            DisableToolbar="false" 
            DisableModeSwitch="true" 
            DisableAlpha="true" />
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" Variant="Variant.Filled" OnClick="ApplyClicked">
            Apply
        </MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    [Parameter] public string ColorValue { get; set; } = string.Empty;
    private void ApplyClicked()
    {
        MudDialog.Close(DialogResult.Ok(ColorValue));
    }
}