<MudGrid Class="mud-full-width mud-full-height pt-4 pl-5">
    <MudItem xs="12">
        <div class="d-flex flex-column">
            <MudPagination Color="Color.Primary" Class="mx-auto" Count="@_imageNameBatches.Count()" Selected="@_selectedPage" SelectedChanged="@OnSelectedPageChanged" />
        </div>
    </MudItem>
    @foreach (var imageName in _selectedImageNameBatch)
    {
        <MudItem xs="12" md="3">
            <ImageThumbnail ProjectId="@ProjectId" ImageName="@imageName" />
        </MudItem>
    }
    <MudItem xs="12">
        <div class="d-flex flex-column">
            <MudPagination Color="Color.Primary" Class="mx-auto" Count="@_imageNameBatches.Count()" Selected="@_selectedPage" SelectedChanged="@OnSelectedPageChanged" />
        </div>
    </MudItem>
</MudGrid>