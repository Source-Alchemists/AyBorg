<MudDialog>
    <DialogContent>
        <MudAlert Severity="Severity.Info"><strong>Password:</strong> @Password <MudIconButton Icon="@Icons.Material.Filled.ContentCopy" Color="Color.Info" OnClick="@OnCopyToClipboardClicked" /></MudAlert>
        <MudAlert Severity="Severity.Warning">Make sure to copy the password. It is never displayed again!</MudAlert>
    </DialogContent>
    <DialogActions>
        <MudButton Color="Color.Primary" OnClick="OnCloseClicked">Close</MudButton>
    </DialogActions>
</MudDialog>