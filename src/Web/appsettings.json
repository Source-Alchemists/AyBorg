{
  "Kestrel": {
    "Endpoints": {
      "Http": {
        "Url": "http://localhost:5010"
      },
      "Https": {
        "Url": "https://localhost:5011"
      }
    }
  },
  "DatabaseProvider": "SqlLite",
  "ConnectionStrings": {
    "SqlLiteConnection": "DataSource=app.db;Cache=Shared",
    "PostgreSqlConnection": "Host=localhost;Database=atomy;Username=postgres;Password=postgres",
