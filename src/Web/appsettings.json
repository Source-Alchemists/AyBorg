    "Host": "localhost",
    "Port": 1883,
    "SecurePort": 8883
  },
  "Atomy": {
    "Service": {
      "Name": "Atomy.Web",
      "UniqueName": "Atomy.Web",
      "Type": "Atomy.Web",
      "Url": "https://localhost:5011"
    },
    "ServiceRegistry": {
      "URL": "http://localhost:5000"
    },
    "Jwt": {
      "SecretKey": "_AtomySecretKey_"
    }
  },
  "AllowedHosts": "*"
